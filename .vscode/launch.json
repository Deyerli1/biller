    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Odoo: Attach",
            "type": "python",
            "request": "attach",
            "port": 8070,
            "debugServer": 3002,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/mnt/extra-addons/biller",
                },
                {
                    "localRoot": "${workspaceFolder}/odoo", //odoo source code
                    "remoteRoot": "/usr/lib/python3/dist-packages/odoo",    //path to source inside docker  
                }
            ],
            "logToFile": true
        }
    ]
}
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_default_product_view_form" model="ir.ui.view">
            <field name="name">res_config_settings_default_product_view_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='account_vendor_bills']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="default_product">
                        <div class="o_setting_right_pane">
                            <label string="Producto por defecto de comprobantes recibidos" for="biller_default_product_id"/><br/>
                            <field name="biller_default_product_id" nolabel="1"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

